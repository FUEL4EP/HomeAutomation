#!/bin/bash

if [[ $1 = *.csv ]]; then
  ext=${1##*.}
  bn=`basename $1 .csv`
  #echo $bn
  #echo $ext
  if [ -f "temp.$$" ]; then
    /bin/rm "temp.$$"
  fi

  /bin/sed -e '/;;/d' < "$1" > temp.$$
  /bin/sed -e 's/,/\./g' < temp.$$ > ${bn}_converted.csv

  if [ -f "temp.$$" ]; then
    /bin/rm "temp.$$"
  fi
else
  echo " "
  echo "Please enter a csv file name with suffix '.csv'"
  echo " "
fi
